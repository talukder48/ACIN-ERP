	<queryString>
		<![CDATA[SELECT
case l.gl_type when 'A' then 'Assets' else 'Liablities & Equity' end Group_name,
gl_type,
    b.gl_code,
    l.gl_name,
    b.gl_balance,
  case l.gl_type when 'L' then -1*b.gl_balance else  b.gl_balance end balance
FROM
    `as_glbalance` b
JOIN `as_glcode` l ON
    (b.gl_code = l.gl_code)
WHERE
    branch_code = '0018'
    and gl_balance<>0
    and l.gl_level='P'
    order by gl_type]]>
